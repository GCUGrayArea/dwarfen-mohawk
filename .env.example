# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# DynamoDB Configuration
# For LocalStack (local development), use: http://localstack:4566
# For AWS (production), leave empty or remove this line
DYNAMODB_ENDPOINT_URL=http://localstack:4566
DYNAMODB_TABLE_EVENTS=zapier-events
DYNAMODB_TABLE_API_KEYS=zapier-api-keys

# Application Configuration
LOG_LEVEL=INFO
API_TITLE=Zapier Triggers API
API_VERSION=1.0.0

# Event Configuration
EVENT_TTL_DAYS=30
DEDUPLICATION_WINDOW_SECONDS=300

# API Limits
MAX_REQUEST_SIZE_BYTES=524288
MAX_PAYLOAD_SIZE_BYTES=262144
MAX_EVENT_TYPE_LENGTH=255
DEFAULT_INBOX_LIMIT=50
MAX_INBOX_LIMIT=200

# Rate Limiting
DEFAULT_RATE_LIMIT_PER_MINUTE=100
